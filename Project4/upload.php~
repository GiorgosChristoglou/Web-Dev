<?php 

  // tmp_name is the temporary location of the file.
  $currAddr =  $_FILES['userfile']['tmp_name'];

  $destination = '/home/Uploads/'

  if ( !empty ($_FILES) ) {
    $destination .= $_FILES['file_name']['tmp_name'];
    move_uploaded_file( $currAddr, $destination);
  }
  else {
    echo "Sorry to tell you bro but you have something wrong.";
  }

  header( 'Location: http://localhost/Project4/index.php');
?>
